{
  "enabled": true,
  "name": "API Postman Testing",
  "description": "Monitors API source code changes and automatically runs Postman collection tests to validate Tranzy API integration",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/services/*.ts",
      "src/services/*.js",
      "src/types/*.ts",
      "src/stores/*.ts",
      "src/hooks/*.ts",
      "package.json",
      "vite.config.ts",
      "*.env*",
      "src/utils/api*.ts",
      "src/components/features/*/services/*.ts"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "API source code or configuration has been modified. Please retrieve the contents of the .postman.json file. If the file does not exist or is empty, create a Postman collection for the Tranzy API integration. If it exists, get the collection ID and run the collection, showing me the results and propose fixes for any errors found."
  }
}